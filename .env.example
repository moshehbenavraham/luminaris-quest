# Supabase Configuration (REQUIRED FOR ALL ENVIRONMENTS)
# Get these from your production Supabase project settings
# The application will fail to start without these
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Optional: Local Development Supabase Override
# Only set these if you want to use a local Supabase instance for development
# VITE_LOCAL_SUPABASE_URL=http://localhost:54321
# VITE_LOCAL_SUPABASE_ANON_KEY=your-local-anon-key

# OpenAI Configuration (REQUIRED for narrative generation)
# Without this, the game cannot generate dynamic story content
VITE_OPENAI_API_KEY=your-openai-api-key

# Leonardo.AI Configuration (for image generation)
VITE_LEONARDO_API_KEY=your-leonardo-api-key

# ElevenLabs Configuration (for voice synthesis)
VITE_ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Deployment Configuration
# VITE_APP_URL=http://localhost:5173  # Development
VITE_APP_URL=https://luminarisquest.org/  # Production

# Feature Flags
VITE_ENABLE_AI_NARRATION=true
VITE_ENABLE_IMAGE_GENERATION=true
VITE_ENABLE_VOICE_SYNTHESIS=true

# Optional: Development Settings
VITE_DEBUG_MODE=false
VITE_MOCK_API_RESPONSES=false  # For development without API keys